	<build>
		<finalName>ROOT</finalName>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<verbose>true</verbose>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>1.0-beta-5</version>
				<executions>
					<execution>
						<id>upload-javadoc</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<fromDir>D:/_PROGRAM/rudaks.co.kr/rudaks-webroot/target</fromDir>
							<includes>*.war</includes>
							<excludes>pom.xml</excludes>
							<url>ftp://rudaks.co.kr</url>
							<toDir></toDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>compress</goal>
							<goal>jslint</goal>
						</goals>
					</execution>
					<execution>
                        <id>default-jslint</id>
                        <phase>process-sources-unbind</phase>
                    </execution>
				</executions>
				<configuration>
					<sourceDirectory>${project.basedir}/src/main/webapp/static/enomix-js/webapps</sourceDirectory>
            		<outputDirectory>${project.basedir}/src/main/webapp/static/js/minify</outputDirectory>	
            		<force>true</force>
            		<jswarn>false</jswarn>
            		<skip>true</skip>
					<excludes>
						<exclude>**/daumeditor/**/*.js</exclude>
						<exclude>**/jqgrid/**/*.js</exclude>
						<exclude>**/*_init.js</exclude>
						<exclude>**/lang/*.js</exclude>
						<exclude>**/*.min.js</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<distributionManagement>
		<repository>
			<id>rudaks-server</id>
			<url>ftp://rudaks.co.kr</url>
		</repository>
	</distributionManagement>
</project>
