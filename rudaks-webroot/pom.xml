	<groupId>kr.co.rudaks</groupId>
	<artifactId>rudaks-webroot</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>rudaks-webroot Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<org.springframework.version>3.1.0.RELEASE</org.springframework.version>

		<!-- Settings for War files -->
		<war.local.dir>${basedir}/target</war.local.dir>
		<!-- Insert the remote target directory path for war file -->
		<war.remote.dir></war.remote.dir>
		<war.remote.server.id>rudaks-server</war.remote.server.id>
		<!-- Insert the url address of FTP server for war file -->
		<war.remote.url>ftp://rudaks.co.kr</war.remote.url>
	</properties>
	<repositories>
		<repository>
			<id>bitwalker.user-agent-utils.mvn.repo</id>
			<url>https://raw.github.com/HaraldWalker/user-agent-utils/mvn-repo/</url>
			<!-- use snapshot version -->
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

